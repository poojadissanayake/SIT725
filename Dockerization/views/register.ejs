<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include header content -->
    <%- include('head') %>
  </head>

  <body>
    <div class="body-container register-body">
      <!-- Include Navbar -->
      <%- include('navbar') %>

      <!-- Contact Section -->
      <section class="contact-section py-5">
        <div
          class="container d-flex justify-content-center align-items-center vh-80"
        >
          <div class="card register-card shadow-lg">
            <div class="card-body">
              <h1 class="card-title text-center mb-4">Register</h1>

              <!-- Error or success message handling -->

              <!-- action="/register"
              method="POST"
              onsubmit="return validateForm()" -->
              <form id="registerForm">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    required="password requried"
                  />
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="dob" class="form-label">Date of Birth</label>
                  <input
                    type="date"
                    class="form-control"
                    id="dob"
                    name="dob"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="confirmPassword" class="form-label"
                    >Confirm Password</label
                  >
                  <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-custom w-100">
                  Register
                </button>
              </form>
              <p class="text-center mt-3">
                Already have an account? <a href="/login">Login here</a>
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Include Footer -->
      <%- include('footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/register.js"></script>
  </body>
</html>
