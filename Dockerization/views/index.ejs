<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include header content -->
    <%- include('head') %>
</head>

<body>
    <div class="body-container">
        <!-- Include Navbar -->
        <%- include('navbar') %>

            <!-- Hero Section -->
            <section class="hero hero-custom text-center py-5">
                <div class="container">
                    <h1 class="display-4">Streak on with Good Vibes!</h1>
                    <p class="lead">Track your goals and complete challenges to stay motivated.</p>
                    <button id="register" class="btn btn-custom" onclick="window.location.href='/register'">Get Started</button>
                </div>
            </section>

            <!-- Features Section -->
            <section class="features features-section py-5">
                <div class="container">
                    <div class="row">
                        <!-- Physical Challenges -->
                        <div class="col-md-4">
                            <div class="card custom-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Physical Challenges</h5>
                                    <p class="card-text">Improve your physical health with daily workout routines.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Academic Challenges -->
                        <div class="col-md-4">
                            <div class="card custom-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Academic Challenges</h5>
                                    <p class="card-text">Stay on top of your studies with tailored academic tasks.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Mindfulness Challenges -->
                        <div class="col-md-4">
                            <div class="card custom-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Mindfulness Challenges</h5>
                                    <p class="card-text">Achieve mental clarity through meditation and relaxation
                                        exercises.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- Track Your Progress -->
                        <div class="col-md-6">
                            <div class="card custom-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Track Your Progress</h5>
                                    <p class="card-text">Monitor your challenges and goals, and mark your achievements.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Get Rewards -->
                        <div class="col-md-6">
                            <div class="card custom-card">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Get Rewards</h5>
                                    <p class="card-text">Earn points and rewards by completing challenges and staying
                                        consistent.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Include Footer -->
            <%- include('footer') %>
    </div>
    <!-- Bootstrap JS (handled by import in index.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>